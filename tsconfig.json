{
  "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "sourceMap": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "removeComments": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
  },
  "include": [ "src/**/*" ],
  "exclude": [
      "src/public"
  ]
}